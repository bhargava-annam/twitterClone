
<div class="d-flex flex-row">
  <div class="login">
  <img> <%= link_to image_tag('login.png',alt:'logo'), root_path ,class:"navbar-brand"%> </img>
  </div>


  <div class="p-2 login-2">
  <div class="d-flex flex-column">
    <%= link_to image_tag('/img/logo.png',class:"logo",height:"50",alt:'logo'), root_path ,class:"navbar-brand"%>
	<h2 >Log in</h2>	
    <br/><br/>
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">

   <span><i class="fa fa-user"></i>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "E-mail"%>
	</span>

  </div>
  <br>
  <div class="field">
   <span><i class="fa fa-lock"></i>
    <%= f.password_field :password, autocomplete: "current-password",placeholder:"password" %>
	</span>
  </div>
  <br/>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
  <br/>
    <%= f.submit "Log in" %>
  </div>
<% end %>
	<div>Already have an account?
	<%= render "devise/shared/links" %>
	
	</div>

  </div>
  </div>
</div>

















