<br/>
<div class="row">
  <div class="col-1">
    
  </div>
  <div class="col-8">
      <div class="panel panel-default post-panel" style="border-radius: 25px 25px 0px 0px;">
        <div class="panel-body">
          <div class="col-sm-1">
            <% begin %>
            <%= image_tag current_user.avatar.variant(resize: "50x50!"), class: "rounded-circle", style: 'margin-top:15px;margin-bottom:15px;' %>
            <% rescue %>
            <%= image_tag('/img/guest.png', style: 'height:50px;width:50px;margin-top:15px;margin-bottom:15px;' , class: "rounded-circle")%>
            <% end %>
          </div>
          <div class="col-sm-11">
          
            <%= form_for(@post) do |f| %>
            <center>

                <div class="field post-title">

                  <%= f.text_field :content, autofocus: true,class:"form-control" %>
                  <br>
                  <label for="s-t"><i class="material-icons">&#xe410;</i></label><br />
                  <%= f.file_field :image, id:'s-t' %>
                  <% if @post.image.attached?%>
                <div class="image-tweet1" >
                  <%= image_tag(@post.image, style: 'width:100%') if @post.image.attached? %>
                 </div>
                 <%= f.label :remove_image %>
                <%= f.check_box :remove_image %>
    
              <% end %>

                </div>

                <div class="actions ">
                  <%= f.submit "Tweet", class:"btn btn-secondary"%>
                <div>
            </center>

                <br>

            <% end %> 

            
          </div>
    
        </div>
    </div>
  </div>

  <div class="col" style="margin-top: -20px;">
    <div class="panel panel-default">
         <%= render 'pages/whoto' %>
      </div>
  </div>
  </div>
</div>