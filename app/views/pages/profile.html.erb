          <div class="jumbotron profilejumbo m-4 ">
            <% begin %>
              <% if current_user == @user%>
                <a href="/users/edit">
                  <%= image_tag @user.avatar.variant(resize: "200x200!"), class: "rounded-circle" %>
                </a>
              <% else %>
                <%= image_tag @user.avatar.variant(resize: "200x200!"), class: "rounded-circle" %>
              <%end%>
            <% rescue %>
              <% if current_user == @user%>
                <a href="/users/edit">
                  <%= image_tag('/img/guest.png', style: 'height:200px;width:200px;' , class: "rounded-circle")%>
                </a>
              <%else%>
                <%= image_tag('/img/guest.png', style: 'height:200px;width:200px;' , class: "rounded-circle")%>
              <%end%>
            <% end %>
            <br/>
            <h3 class='pl-5', style="font-weight: bold;"><%= params[:id] %></h3>
            <% if user_signed_in? && current_user!=@user%>
              <% if current_user.following?(@user)%>
                <%= button_to 'unfollow', relationships_path(user_id: @user.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-primary"%> 
              <% else %>
                <%= button_to 'follow', relationships_path(user_id: @user.id), class:"btn btn-primary" %> 
              <% end %>
            <% end %>
            </div>

      
  
  
