  <div class="row">
    <div class="col">
      <div class="panel panel-default">
        <div class="panel-body">
          <% if user_signed_in? %>
          <div class="side-panel">
            <div class="col-sm-12" style="margin-top: 10px;">
              <div class="col-sm-2">
              <% begin %>
              <a href="/user/<%= current_user.username %>">
              <%= image_tag current_user.avatar.variant(resize: "200x200!"), class: "rounded-circle" %>
              </a>
              <% rescue %>
              <a href="/users/edit">
              <%= image_tag('/img/guest.png', style: 'height:200px;width:200px;' , class: "rounded-circle")%>
               </a>
              <% end %>
            </div>
              <div class="col-sm-10"><h4 style="text-align: center;">
              <a class="post-owner" href="/user/<%= current_user.username %>">
                <%= current_user.username %>  
              </a>            
              </h4></div>
              <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">POSTS<br>
                <h6 style="color: #0084B4; font-size: 200%;"><%= current_user.posts.count %></h6>
              </div>
              <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">FOLLOWERS<br>
                <h6 style="color: #0084B4; font-size: 200%;"><%= current_user.followers.count%></h6>
              </div>
              <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">FOLLOWing<br>
                <h6 style="color: #0084B4; font-size: 200%;"><%= current_user.following.count%></h6>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-6">
      <% if user_signed_in? %>
        <%= render '/components/post_form' %> <br/>
      <% end %>
      <% @posts.each do |p| %>
      <% if !user_signed_in? || current_user == p.user || current_user.following?(p.user) %>   
      <%= render partial: 'tweet', locals: {p: p} %>
        <br/>
        <% end %>
      <% end %>
    </div>
  
    <div class="col">
      <div class="panel panel-default">
        <div class="panel-body">
          <p class="side-panel">
          Who to Follow          
          </p>
        </div>
      </div>
     <div class="panel panel-default">
        <div class="panel-body">
          <div class="whotofollowpanel">
            <% @users.each do |user|%>
              <% if user_signed_in?%>
                <% if current_user != user  && !current_user.following?(user)%>
                  <div clas="col-sm-1">
                    <% begin %>
                        <%= image_tag User.find(user.id).avatar.variant(resize: "40x40!"), class: "sideimg rounded-circle", style: 'margin-top:15px;margin-bottom:50px;' %>
                    <% rescue %>
                        <%= image_tag('/img/guest.png',class: "sideimg rounded-circle", style: 'height:40px;width:40px;margin-top:15px;margin-bottom:50px;')%>
                    <% end %>

                  </div>
                  <div class="col-sm-11" style="margin-top: -92px;">
                    <span class="whotofollowtitle">
                      <a href="/user/<%= user.username %>">
                        <span class='post-owner'>
                          <%= user.username%>
                        </span>
                      </a>
                      </span>
                      <% if user_signed_in? && current_user!=@user%>
                        <% if current_user.following?(@user)%>
                          <%= button_to 'unfollow', relationships_path(user_id: user.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-primary",style:"margin-left: 127px;margin-top: -30px;"%> 
                        <% else %>
                          <%= button_to 'follow', relationships_path(user_id: user.id), class:"btn btn-primary",style:"margin-left: 127px;margin-top: -30px;" %> 
                        <% end %>
                      <% end %>
                    </p>
                  </div>
                <% end %>
              <% end%>
            <% end %>
          </div>
        </div>
      </div>
