  <div class="panel panel-default post-panel">
    <div class="panel-body">
      <div class="col-sm-1">
        <% begin %>
        <%= image_tag current_user.avatar.variant(resize: "50x50!"), class: "rounded-circle", style: 'margin-top:15px;margin-bottom:15px;' %>
        <% rescue %>
        <%= image_tag('/img/no_image.png', style: 'height:50px;width:50px;margin-top:15px;margin-bottom:15px;' , class: "rounded-circle")%>
        <% end %>
      </div>
      <div class="col-sm-11">
       
        <%= form_for(@newPost) do |f| %>
          <center>
            <div class="field post-title">
              <%= f.text_field :content, autofocus: true,class:"form-control" %>
              <br>
              <label for="s-t"><i class="material-icons">&#xe410;</i></label><br />
              <%= f.file_field :image, id:'s-t' %>
            </div>
            <br>
          </center>
          <div class="actions ">
    <%= f.submit class:"btn btn-secondary", value:"tweet" %>
  </div>

        <% end %> 
        
      </div>

    </div>
</div>